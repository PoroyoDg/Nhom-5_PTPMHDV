<%- include ('header')%>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Favourite product</h1>
            
          </div>
          <a href="/Products" class="btn btn-success" style="float: right;">
            <i class="fa fa-plus"></i> Add Product favourite
          </a>
        </div>
        
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <div class="row">
      <div class="col-12">
        <div class="card" style="height: 480px;">
          <div class="card-header">

            <form action="" method="get" >
              <h3 class="card-title">
                Search by account's name
              </h3>

              <div class="card-tools">
                <div class="input-group input-group-sm" style="text-align: right;" style="width: 150px;">
                  <input name="name" class="form-control float-right" placeholder="Search..">
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                  </div>
                </div>
              </div>
            </form>

          </div>
          <!-- /.card-header -->
          <div class="card-body table-responsive p-0" style="height: 300px;">
            <table class="table table-head-fixed">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Account's Name</th>
                  <th>Favourite Product</th>
                  
                </tr>
              </thead>
              <tbody>
                <% data.map(function(prd,index){ %>
                  <tr>
                    <td>
                      <%= index + 1 %>
                    </td>
                    <td>
                      <%= prd.aname %>
                    </td>
                    <td>
                      <%= prd.pname %>
                    </td>
                    
                    
                  </tr>
                  <% }) %>

              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
    <!-- /.row -->
  </div>
  <%- include ('footer')%>