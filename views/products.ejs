<%- include ('header')%>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Products</h1>

          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <div class="row">
      <div class="col-12">
        <div class="card" style="height: 480px;">
          <div class="card-header">

            <form action="" method="get" >
              <h3 class="card-title">
                Search by product's name
              </h3>

              <div class="card-tools">
                <div class="input-group input-group-sm" style="text-align: right;" style="width: 150px;">
                  <input name="name" class="form-control float-right" placeholder="Search..">
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                  </div>
                </div>
              </div>
            </form>

          </div>
          <!-- /.card-header -->
          <div class="card-body table-responsive p-0" style="height: 300px;">
            <table class="table table-head-fixed">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Name</th>
                  <th>Brand</th>
                  <th>Price</th>
                  <th>Image</th>
                  <th><a href="/addProduct" class="btn btn-success"><i class="fa fa-plus"></i> Add Product</a></th>
                </tr>
              </thead>
              <tbody>
                <% data.map(function(prd,index){ %>
                  <tr>
                    <td>
                      <%= index + 1 %>
                    </td>
                    <td>
                      <%= prd.name %>
                    </td>
                    <td>
                      <%= prd.cname %>
                    </td>
                    <td>
                      <%= prd.price %>
                    </td>
                    <td><span class="tag tag-success">
                        <% if(prd.id > 90){ %>
                          <img src="image/<%= prd.image1 %>" alt="" width="60">
                        <% } else{ %>
                          <img src="<%= prd.image1 %>" alt="" width="60">
                        <% } %>
                        
                      </span></td>
                    <td>
                      <a href="/editProduct/<%= prd.id %>" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                      <a href="/deleteProduct/<%= prd.id %>" class="btn btn-danger"><i class="fa fa-trash"></i>
                        Delete</a>
                        <a href="/productView/<%= prd.id %>" class="btn btn-default"><i class="fa fa-eye"></i>
                          Details </a>
                    </td>
                  </tr>
                  <% }) %>

              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
    <!-- /.row -->
  </div>
  <%- include ('footer')%>