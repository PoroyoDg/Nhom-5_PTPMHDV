<%- include ('header')%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Product Details</h1>
            <hr>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
          <div class="card-body">
            <div class="row">
              <div class="col-12 col-sm-6">
                <h3 class="d-inline-block d-sm-none">LOWA Menâ€™s Renegade GTX Mid Hiking Boots Review</h3>
                <div class="col-12">
                  <a href="/products" class="btn btn-danger"><i class = "fa fa-arrow-left"></i> Exit</a>
                  <br><br>
                  <% if(prd.id >90){ %>
                      <img src="image/<%= prd.image1 %>" class="product-image" alt="Product Image">
                  <% }else{ %>

                    <img src="<%= prd.image1 %>" class="product-image" alt="Product Image">
                    <% } %>
                </div>
                <% if(prd.id < 90){ %>
                  <div class="col-12 product-image-thumbs">
                  <div class="product-image-thumb active"><img src="<%= prd.image1 %>" alt="Product Image"></div>
                  <div class="product-image-thumb" ><img src="<%= prd.image2 %>" alt="Product Image"></div>
                  <div class="product-image-thumb" ><img src="<%= prd.image3 %>" alt="Product Image"></div>
                  <div class="product-image-thumb" ><img src="<%= prd.image4 %>" alt="Product Image"></div>
                </div>
                <% } %>
                
              </div>
              <div class="col-12 col-sm-6">
                <h3 class="my-3"><%= prd.name %></h3>
                <hr>
                <h4>Brand: <%= prd.brand %> </h4>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default text-center active">
                    <input type="radio" name="color_option" id="color_option1" autocomplete="off" checked="">
                    Black
                    <br>
                    <i class="fas fa-circle fa-2x text-green"></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input type="radio" name="color_option" id="color_option2" autocomplete="off">
                    Gold
                    <br>
                    <i class="fas fa-circle fa-2x text-blue"></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input type="radio" name="color_option" id="color_option3" autocomplete="off">
                    Silver
                    <br>
                    <i class="fas fa-circle fa-2x text-purple"></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input type="radio" name="color_option" id="color_option4" autocomplete="off">
                    Pink
                    <br>
                    <i class="fas fa-circle fa-2x text-red"></i>
                  </label>
                  <label class="btn btn-default text-center">
                    <input type="radio" name="color_option" id="color_option5" autocomplete="off">
                    White
                    <br>
                    <i class="fas fa-circle fa-2x text-orange"></i>
                  </label>
                </div>
  
                <div class="bg-gray py-2 px-3 mt-4">
                  <h2 class="mb-0">
                    <%= prd.price %> VND
                  </h2>
                </div>
  
              </div>
            </div>
            <div class="row mt-4">
              <nav class="w-100">
                <div class="nav nav-tabs" id="product-tab" role="tablist">
                  <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Description</a>
                  <a class="nav-item nav-link" id="product-comments-tab" data-toggle="tab" href="#product-comments" role="tab" aria-controls="product-comments" aria-selected="false">Comments</a>
                  <a class="nav-item nav-link" id="product-rating-tab" data-toggle="tab" href="#product-rating" role="tab" aria-controls="product-rating" aria-selected="false">Rating</a>
                </div>
              </nav>
              <div class="tab-content p-3" id="nav-tabContent">
                <div class="tab-pane fade show active" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab"> <%= prd.discribe %> </div>
                <div class="tab-pane fade" id="product-comments" role="tabpanel" aria-labelledby="product-comments-tab"> No comment. </div>
                <div class="tab-pane fade" id="product-rating" role="tabpanel" aria-labelledby="product-rating-tab"> No Rating</div>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
  
      </section>
</div>
  <%- include ('footer')%>