<%- include('header') %>
<div class="content-wrapper">
    <section class="content-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Comparative Products</h1>
            <!-- Form với nút "Compare Selected" ở bên cạnh tiêu đề -->
            <form action="/compare" method="POST" id="compareForm">
                <button type="submit" class="btn btn-info">Compare Selected</button>
            </form>
        </div>
    </section>
    <div class="card-body table-responsive p-0" style="height: 500px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>STT</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(prd, index) { %>
                    <tr>
                        <td>
                            <input type="checkbox" name="productIds" form="compareForm" value="<%= prd.id %>">
                        </td>
                        <td><%= index + 1 %></td>
                        <td><%= prd.name %></td>
                        <td><%= prd.cname %></td>
                        <td><%= prd.price %></td>
                        <td><span class="tag tag-success">
                            <% if(prd.id > 90){ %>
                              <img src="image/<%= prd.image1 %>" alt="" width="60">
                            <% } else{ %>
                              <img src="<%= prd.image1 %>" alt="" width="60">
                            <% } %>
                            
                          </span></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('footer') %>
